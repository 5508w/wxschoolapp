.head {
  background-color: #f6f5f3;
  height: 36px;
  color: #000;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.head1 {
  width: 100%;
  height: 36px;
}

.scroll-view_class {
  height: 40px;
  display: flex;
  justify-content: center;
  flex-direction: row;
  padding: 5rpx 0 0 0rpx;
}

.choose {
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 14px;
  font-weight: bold;
}

.nochoose {
  border-radius: 25px;
  width: 60px;
  height: 40px;
  line-height: 40px;
  padding-left: 5px;
  padding-right: 5px;
  font-size: 12px;
  text-align: center;
  border-left: 3px solid #f6f5f3;
  border-right: 3px solid #f6f5f3;
  background-color: rgb(70, 235, 185);
}

.body {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0,20px,20px,20px;
  border-top: 10px solid #f6f5f3;
  border-bottom: 80px solid #f6f5f3;
}

navigator {
  overflow: hidden;
}

.list {
  margin-bottom: 20rpx;
  height: 200rpx;
  position: relative;
}

.imgs {
  float: left;
}

.imgs image {
  display: block;
  width: 200rpx;
  height: 200rpx;
}

.infos {
  float: left;
  width: 480rpx;
  height: 200rpx;
  padding: 20rpx 0 0 20rpx;
}

.title {
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.date {
  font-size: 14px;
  color: #aaa;
  position: absolute;
  bottom: 0;
}

.loadMore {
  text-align: center;
  margin: 30px;
  color: #aaa;
  font-size: 16px;
}

page {
  background-color: #fdfeff;
}

/* 倒三角 */

.nabla {
  width: 0px;
  height: 0px;
  border-top: 10px solid #000;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
}
